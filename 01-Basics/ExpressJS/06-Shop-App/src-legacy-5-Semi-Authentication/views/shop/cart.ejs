<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../includes/content-head.ejs") %>
    <%- include("../includes/content-title.ejs") %>
</head>
<body>
  <header class="main-header">
    <%- include("../includes/content-nav.ejs") %>
  </header>
  <main>
    <% if (cartItems.length> 0) { %>
      <ul class="cart__item-list">
        <% for (let cartItem of cartItems) { %>
          <li class="cart__item">
            <h1>
              <%= cartItem.product.title %>
            </h1>
            <h2>Quantity: <%= cartItem.quantity %>
            </h2>
            <form action="/cart-item-delete" method="post">
              <input type="hidden" value="<%= cartItem.product._id %>" name="cartItemId">
              <button class="btn danger" type="submit">Delete</button>
            </form>
          </li>
          <% } %>
      </ul>
      <br><br>
      <hr>
      <br>
      <div class="centered">
        <form action="/order-create" method="post">
          <button class="btn" type="submit">Order Now!</button>
        </form>
      </div>
      <% } else { %>
        <h1>No Products!</h1>
        <% } %>
  </main>
</body>
</html>
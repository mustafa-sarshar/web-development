<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../includes/content-head.ejs") %>
    <%- include("../includes/content-title.ejs") %>
</head>
<body>
  <header class="main-header">
    <%- include("../includes/content-nav.ejs") %>
  </header>
  <main>
    <%- include("../includes/gadgets/flash-message.ejs") %>
      <form class="form-main" action="/auth/sign-up" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label class="form-control" for="email">Email:</label>
          <input
            class="form-control <%= validationErrors.find(error => error.path === 'email') ? 'invalid-input' : '' %>"
            type="text" name="email" id="email" value="<%= oldInputs.email %>" required>
        </div>
        <div class="form-group">
          <label class="form-control" for="password">Password:</label>
          <input
            class="form-control <%= validationErrors.find(error => error.path === 'password') ? 'invalid-input' : '' %>"
            type="password" name="password" id="password" value="<%= oldInputs.password %>" required>
        </div>
        <div class="form-group">
          <label class="form-control" for="password-confirm">Confirm Password:</label>
          <input
            class="form-control <%= validationErrors.find(error => error.path === 'passwordConfirm') ? 'invalid-input' : '' %>"
            type="password" name="passwordConfirm" id="password-confirm" value="<%= oldInputs.passwordConfirm %>"
            required>
        </div>
        <div class="form-group">
          <button class="form-control" type="submit">
            Sign Up
          </button>
        </div>
      </form>
  </main>
</body>
</html>